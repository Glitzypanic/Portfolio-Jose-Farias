---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Porfolio Jose Farias" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="svg/code-brackets.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col h-full w-full items-center bg-[#121212]">
    <div
      class="fixed inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
    >
    </div>
  </body>
  <header class="flex justify-center max-w-screen-xl w-full fixed z-10 text-sm">
    <nav class="w-fit p-3 rounded-3xl mt-5 mb-2 text-[#d0dee2]">
      <ul class="flex gap-3">
        <li>
          <a href="/">Inicio</a>
        </li>
        <li>
          <a href="/experience">Experiencia</a>
        </li>
        <li>
          <a href="/proyects">Proyectos</a>
        </li>
        <li>
          <a href="/tools">Herramientas</a>
        </li>
        <li>
          <a href="/about">Sobre mi</a>
        </li>
      </ul>
    </nav>
  </header>
  <slot />
  <script>
    window.addEventListener("scroll", function () {
      const nav = document.querySelector("nav");
      if (window.pageYOffset > 0) {
        nav.classList.add("backdrop-blur-3xl", "bg-slate-50/30");
      } else {
        nav.classList.remove("backdrop-blur-3xl", "bg-slate-50/30");
      }
    });
  </script>
</html>

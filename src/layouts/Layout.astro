---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col h-full w-full items-center bg-[#121212]">
  <header
      class="flex justify-center max-w-screen-xl w-full fixed z-10 text-sm"
    >
      <nav
        class="w-fit p-3 rounded-3xl mt-5 mb-2 backdrop-blur-3xl bg-slate-50/30 text-white"
      >
        <ul class="flex gap-3">
          <li>
            <a href="/">Inicio</a>
          </li>
          <li>
            <a href="/about">Sobre mi</a>
          </li>
          <li>
            <a href="/experience">Experiencia</a>
          </li>
          <li>
            <a href="/proyects">Proyectos</a>
          </li>
          <li>
            <a href="/tools">Herramientas</a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
  </body>
</html>
